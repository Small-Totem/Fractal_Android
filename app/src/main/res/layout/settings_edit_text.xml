<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="渲染倍率和迭代次数是影响渲染时长的主要原因\n未指定的参数不会被改变"
        android:textSize="14sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="X="
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/preferences_edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="[Double]"
            android:inputType="numberSigned|numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="Y="
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/preferences_edit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="[Double]"
            android:inputType="numberSigned|numberDecimal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="缩放倍率="
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/preferences_edit3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="[Double][0~4E12]"
            android:inputType="numberDecimal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="渲染倍率="
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/preferences_edit4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="[Double][0.1~3]"
            android:inputType="numberDecimal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="立即渲染倍率="
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/preferences_edit5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="[Double][0.1~1]"
            android:inputType="numberDecimal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="迭代次数="
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/preferences_edit6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="[Int][1~2147483647]"
            android:inputType="number"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="自适应迭代上限="
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/preferences_edit7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="[Int][1~2147483647]"
            android:inputType="number"
            android:imeOptions="actionDone"
            />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
        <Button
            android:id="@+id/settings_b1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/settings_b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_with_ripple"
            android:onClick="settings_load"
            android:text="加载"
            />

        <Button
            android:id="@+id/settings_b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_with_ripple"
            android:onClick="settings_confirm"
            android:text="执行"
            app:layout_constraintEnd_toStartOf="@id/settings_b3"
            app:layout_constraintStart_toEndOf="@id/settings_b1"
            app:layout_constraintTop_toTopOf="parent"
            />
        <Button
            android:id="@+id/settings_b3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/settings_b2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_with_ripple"
            android:onClick="settings_clear"
            android:text="清空"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>